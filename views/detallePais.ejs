<div class="container mx-auto px-4 py-6">
  <a href="/paises" class="bg-blue-500 text-white px-4 py-2 rounded shadow hover:bg-blue-700 mb-4 inline-block">Volver al Dashboard</a>

  <h1 class="text-3xl font-bold text-white mb-6"><%= pais.name.nativeName.spa.official %></h1>

  <table class="min-w-full bg-gray-800 border border-gray-700 rounded-lg shadow-lg">
      <tr>
          <th class="py-2 px-4 border-b border-gray-700 text-left text-sm font-semibold text-white">Campo</th>
          <th class="py-2 px-4 border-b border-gray-700 text-left text-sm font-semibold text-white">Valor</th>
      </tr>
      <tr>
          <td class="py-2 px-4 border-b border-gray-700 text-gray-300">Nombre Oficial</td>
          <td class="py-2 px-4 border-b border-gray-700 text-gray-300"><%= pais.name.nativeName.spa.official %></td>
      </tr>
      <tr>
          <td class="py-2 px-4 border-b border-gray-700 text-gray-300">Capital</td>
          <td class="py-2 px-4 border-b border-gray-700 text-gray-300"><%= pais.capital.join(', ') %></td>
      </tr>
      <tr>
          <td class="py-2 px-4 border-b border-gray-700 text-gray-300">Fronteras</td>
          <td class="py-2 px-4 border-b border-gray-700 text-gray-300">
              <% if (pais.borders.length > 0) { %>
                  <%= pais.borders.join(', ') %>
              <% } else { %>
                  Sin fronteras
              <% } %>
          </td>
      </tr>
      <tr>
          <td class="py-2 px-4 border-b border-gray-700 text-gray-300">Área</td>
          <td class="py-2 px-4 border-b border-gray-700 text-gray-300"><%= pais.area %> km²</td>
      </tr>
      <tr>
          <td class="py-2 px-4 border-b border-gray-700 text-gray-300">Población</td>
          <td class="py-2 px-4 border-b border-gray-700 text-gray-300"><%= pais.population %></td>
      </tr>
      <tr>
          <td class="py-2 px-4 border-b border-gray-700 text-gray-300">Zonas Horarias</td>
          <td class="py-2 px-4 border-b border-gray-700 text-gray-300"><%= pais.timezones.join(', ') %></td>
      </tr>
      <tr>
          <td class="py-2 px-4 border-b border-gray-700 text-gray-300">Creador</td>
          <td class="py-2 px-4 border-b border-gray-700 text-gray-300"><%= pais.creador %></td>
      </tr>
  </table>

  <div class="mt-6">
      <a href="/paises/editar/<%= pais._id %>"" class="bg-green-500 text-white px-4 py-2 rounded shadow hover:bg-green-700">Editar</a>
      <form action="/paises/<%= pais._id %>?_method=DELETE" method="POST" class="inline-block" onsubmit="return confirm('¿Estás seguro de eliminar este país?');">
          <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded shadow hover:bg-red-700">Eliminar</button>
      </form>
  </div>
</div>
  